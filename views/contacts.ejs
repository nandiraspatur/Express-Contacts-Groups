<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title><%=title%></title>
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th colspan="6"><h3>CONTACTS</h3></th>
          <th>
            <a href="/"><i class="material-icons">home</i></a>
            <a href="#form"><i class="material-icons">add_box</i></a>
          </th>
        </tr>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Company</th>
          <th>Telepon</th>
          <th>Email</th>
          <th>Groups</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%if(contacts.length == 0){%>
          <tr>
            <td colspan="7">Empty</td>
          </tr>
        <%}else{%>
        <%for(var i=0; i<contacts.length; i++){%>
          <tr>
            <td><%=contacts[i].id%></td>
            <td><%=contacts[i].name%></td>
            <td><%=contacts[i].company%></td>
            <td><%=contacts[i].telp_number%></td>
            <td><%=contacts[i].email%></td>
            <td><%=contacts[i].groups.join(', ')%></td>
            <td>
              <a href="/contacts/edit/<%=contacts[i].id%>"><i class="material-icons">mode_edit</i></a>
              <a href="/contacts/address/<%=contacts[i].id%>"><i class="material-icons">navigation</i></a>
              <a href="/contacts/delete/<%=contacts[i].id%>"><i class="material-icons">delete_forever</i></a>
          </td>
          </tr>
        <%}}%>
      </tbody>
    </table>
    <div class="user" id="form">
        <header class="user__header">
            <img src="/img/add.svg" alt="" />
            <h1 class="user__title">ADD NEW CONTACT</h1>
            <br>
            <p style="color:red;"><%=alert%></p>
        </header>

        <form class="form" action="/contacts" method="post">
            <div class="form__group">
                <input type="text" placeholder="Your Name" name="name" class="form__input" />
            </div>

            <div class="form__group">
                <input type="text" placeholder="Company" name="company" class="form__input" />
            </div>

            <div class="form__group">
                <input type="text" placeholder="Telephone" name="telp_number" class="form__input" />
            </div>

            <div class="form__group">
                <input type="text" placeholder="Email" name="email" class="form__input" />
            </div>

            <div class="form__group">
              <select name="groups_id" class="select">
                <option value="">-select groups-</option>
                <%for(var i=0; i<groups.length; i++){%>
                  <option value="<%=groups[i].id%>"><%=groups[i].name_of_group%></option>
                <%}%>
              </select>
            </div>

            <button class="btn" type="submit">SUBMIT</button>
        </form>
    </div>
  </body>
</html>
