<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title><%=title%></title>
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th colspan="3"><h3>GROUPS</h3></th>
          <th>
            <a href="/"><i class="material-icons">home</i></a>
            <a href="#form"><i class="material-icons">add_box</i></a>
          </th>
        </tr>
        <tr>
          <th>ID</th>
          <th>Name Group</th>
          <th>Members</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%if(groups.length == 0){%>
          <tr>
            <td colspan="4">Empty</td>
          </tr>
        <%}else{%>
        <%for(var i=0; i<groups.length; i++){%>
          <tr>
            <td><%=groups[i].id%></td>
            <td><%=groups[i].name_of_group%></td>
            <td><%=groups[i].members.join(', ')%></td>
            <td>
              <a href="/groups/edit/<%=groups[i].id%>"><i class="material-icons">mode_edit</i></a>
              <a href="/groups/assign-contacts/<%=groups[i].id%>"><i class="material-icons">group</i></a>
              <a href="/groups/delete/<%=groups[i].id%>"><i class="material-icons">delete_forever</i></a>
          </td>
          </tr>
        <%}}%>
      </tbody>
    </table>
    <div class="user" id="form">
        <header class="user__header">
            <img src="/img/add.svg" alt="" />
            <h1 class="user__title">ADD NEW GROUP</h1>
        </header>

        <form class="form" action="/groups" method="post">
            <div class="form__group">
                <input type="text" placeholder="Name Group" name="name_of_group" class="form__input" />
            </div>

            <button class="btn" type="submit">SUBMIT</button>
        </form>
    </div>
  </body>
</html>
